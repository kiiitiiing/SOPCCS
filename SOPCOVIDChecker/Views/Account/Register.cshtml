@model AddUserModel

<div class="modal-content" id="register_modal">
    <div class="modal-header">
        <h4>
            <i class="fa fa-user-plus"></i>
            &nbsp;Register user
        </h4>
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <form asp-action="Register">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>First name:</label>
                        <input class="form-control" asp-for="Firstname" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Middle name:</label>
                        <input class="form-control" asp-for="Middlename" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Last name:</label>
                        <input class="form-control" asp-for="Lastname" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Contact number:</label>
                        <input class="form-control" asp-for="ContactNumber" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Facility:</label>
                        <select class="form-control select2" asp-for="FacilityId" asp-items="ViewBag.Facilities"></select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Username:</label>
                        <input class="form-control" asp-for="Username" />
                        <span class="text-danger text-sm" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Password:</label>
                        <input class="form-control" asp-for="Password" />
                        <span class="text-danger text-sm" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Confirm Password:</label>
                        <input class="form-control" asp-for="ConfirmPassword" /> 
                        <span class="text-danger text-sm" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
            </div>
            @if (ViewBag.Errors != null)
            {
                <div class="row" style="margin-top: 20px;">
                    <div class="col-sm-12 center" style="align-content:center">
                        <span class="text-danger text-sm">Please input the required fields.</span>
                    </div>
                </div>
            }
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-danger fa-pull-left" type="button" data-dismiss="modal">
            Cancel
        </button>
        <button class="btn btn-sm btn-success fa-pull-right" data-action="small_modal" data-save="modal">
            Submit
        </button>
    </div>
</div>

<script>
    $(function () {
        $('.select2').select2()
    })
</script>