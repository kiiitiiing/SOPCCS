@model PaginatedList<UserLess>


@if (Model.Count() != 0)
{<div class="table-responsive">
        <table class="table table-striped table-hover" style="font-size: 14px;">
            <thead>
                <tr class="bg-black">
                    <th>Name</th>
                    <th>Facility</th>
                    <th>Contact / Email</th>
                    <th>Address</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="text-warning text-bold"
                               style="cursor:pointer; font-size: 16px !important;"
                               onclick="showInPopup('@Url.Action("EditUser","Account", new { userId = item.Id })', 'def')">
                                @item.Fullname
                            </a>
                        </td>
                        <td>@item.Facility</td>
                        <td>
                            @item.ContactNo<br />
                            <small class="text-success">(@item.Email)</small>
                        </td>
                        <td>@item.Address</td>
                        <td>@item.Username</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <span>
            <i class="fa fa-exclamation-triangle"></i> No Users found!
        </span>
    </div>
}