@model FacilityModel

    <div class="modal-header">
        <fieldset>
            <legend>
                <i class="fa fa-plus"></i>
                &nbsp;Update Facility
            </legend>
        </fieldset>
    </div>
    <form asp-controller="Admin" asp-action="UpdateFacility" method="post" onsubmit="return jQueryAjaxPost(this, 'admin_facilities')">
        <div class="modal-body">
            <input asp-for="Id" hidden />
            <!-- FACILITY NAME -->
            <div class="form-group">
                <label>Facility name:</label>
                <input class="form-control" type="text" asp-for="Name" autofocus required>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <!-- ABBREVATION -->
            <div class="form-group">
                <label>Abbr:</label>
                <input class="form-control" type="text" asp-for="Abbrevation">
            </div>
            <!-- PROVINCE -->
            <div class="form-group">
                <label>Province:</label>
                <select class="form-control" id="province-filter" asp-for="Province" asp-items="ViewBag.Province" required>
                    <option value="">Select Province</option>
                </select>
                <span class="text-danger" asp-validation-for="Province"></span>
            </div>
            <!-- MUNCITY -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>
                            City/Municipality:
                        </label>
                        <select id="muncityFilters"
                                asp-for="Muncity"
                                asp-items="ViewBag.Muncity"
                                title="City/Municipality"
                                class="form-control col-sm-12"
                                onchange="MuncityOnChange($(this).val(),'@Url.Action("FilteredBarangay","Helper", new {muncityId=""})');">
                            <option value="">Select City/Municipaliy</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>
                            Barangay:
                        </label>
                        <select class="form-control" asp-for="Barangay" asp-items="ViewBag.Barangay" id="barangays">
                            <option value="" selected hidden>Select Barangay</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- ADDRESS -->
            <div class="form-group">
                <label>Address:</label>
                <input class="form-control" type="text" asp-for="Address" required>
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <!-- CONTACT -->
            <div class="form-group">
                <label>Contact:</label>
                <input class="form-control" type="text" asp-for="Contact" required>
                <span class="text-danger" asp-validation-for="Contact"></span>
            </div>
            <!-- EMAIL -->
            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="text" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <!-- CHIEF -->
            <div class="form-group">
                <label>Chief of hospital(name):</label>
                <input class="form-control" type="text" asp-for="Chief">
                <span class="text-danger" asp-validation-for="Chief"></span>
            </div>
            <!-- LEVEL -->
            <div class="form-group">
                <label>Hospital Level:</label>
                <select class="form-control" asp-for="Level" asp-items="ViewBag.Levels">
                    <option value="">Select Hospital Level</option>
                </select>
                <span class="text-danger" asp-validation-for="Level"></span>
            </div>
            <!-- TYPE -->
            <div class="form-group">
                <label>Hospital Type:</label>
                <select class="form-control" asp-for="Type" asp-items="ViewBag.Types">
                    <option value="">Select Hospital Type</option>
                </select>
                <span class="text-danger" asp-validation-for="Type"></span>
            </div>
            <hr>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default btn-sm" data-dismiss="modal">
                <i class="fa fa-times"></i> Cancel
            </button>
            <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#remove-facility-alert" value="@Model.Id">
                <i class="fa fa-times"></i> Remove
            </button>
            <button class="btn btn-success btn-sm" data-save="modal">
                <i class="fa fa-check"></i>
                &nbsp;Save
            </button>
        </div>
    </form>